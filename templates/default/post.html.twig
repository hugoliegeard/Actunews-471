{% extends 'base.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block body %}

    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">{{ post.title }}</h1>
    </div>

    <div class="py-5 bg-light mt-3">
        <div class="container">
            <div class="jumbotron">
                <div class="row">
                    <div class="col">
                        <img class="img-fluid" src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}">
                    </div>
                    <div class="col">
                        {{ post.content | raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
